<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="@string/return_to_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/slogan_category"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Select Store"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_marginTop="45dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/storeList"
        android:layout_width="409dp"
        android:layout_height="306dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.408" />

    <ImageView
        android:id="@+id/shopping_cart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="280dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ready_for_pick_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeList"
        app:layout_constraintVertical_bias="0.948"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/ready_for_pick_up"
        android:layout_width="49dp"
        android:layout_height="51dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/nav_cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeList"
        app:layout_constraintVertical_bias="0.357"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/OrderTextView"
        android:layout_width="49dp"
        android:layout_height="19dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="16dp"
        android:text="Order"
        android:textAlignment="center"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/ready_for_pick_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CartTextView"
        app:layout_constraintTop_toBottomOf="@+id/storeList" />

    <TextView
        android:id="@+id/CartTextView"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:text="Cart"
        android:textAlignment="center"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/shopping_cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeList" />

    <Button
        android:id="@+id/CartButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/shopping_cart"
        app:layout_constraintEnd_toEndOf="@+id/shopping_cart"
        app:layout_constraintStart_toStartOf="@+id/shopping_cart"
        app:layout_constraintTop_toBottomOf="@+id/CartTextView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/OrderPageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"

        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/ready_for_pick_up"
        app:layout_constraintEnd_toEndOf="@+id/ready_for_pick_up"
        app:layout_constraintStart_toStartOf="@+id/ready_for_pick_up"
        app:layout_constraintTop_toTopOf="@+id/ready_for_pick_up" />

</androidx.constraintlayout.widget.ConstraintLayout>
